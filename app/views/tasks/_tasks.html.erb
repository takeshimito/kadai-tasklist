<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="card">
      <div class="card-body">
        <h4 class="card-title card-dark">ユーザ名：<%= task.user.name %></h4>
        <h6 class="card-subtitle text-muted">投稿時間：<%= task.created_at %></h6>
        <h5 class="card-text card-dark">状況：<%= task.status %></h5>
        <h5 class="card-text card-dark">タスク：<%= link_to task.content, task_path(task) %></h5>
      </div>
    </li>
  <% end %>
  <%= paginate @tasks %>
</ul>
