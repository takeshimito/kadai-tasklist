<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: task, local: true) do |f| %>
     <% if task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% task.errors.full_messages.each do |tsk| %>
           <li><%= tsk %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :status, '状況' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      <%= f.submit '投稿', class: 'btn btn-info' %>
    <% end %>
  </div>
  <div class="col-3 mt-3">
    <%= link_to '一覧に戻る', tasks_path, class: 'btn btn-info' %>
  </div>
</div>